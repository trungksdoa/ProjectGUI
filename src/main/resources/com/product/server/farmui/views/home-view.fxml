<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<ScrollPane fitToWidth="true" fitToHeight="true" 
            xmlns:fx="http://javafx.com/fxml" 
            fx:controller="com.product.server.farmui.controllers.HomeController">
    <VBox spacing="20" styleClass="content-container">
        <Label text="Welcome to Koi Fish Trading Service Management" styleClass="header-label"/>
        
        <!-- Farm Showcase Section -->
        <TitledPane text="Featured Koi Farms" expanded="true">
            <VBox spacing="15">
                <GridPane fx:id="farmGrid" hgap="20" vgap="20"/>
            </VBox>
        </TitledPane>
        
        <!-- Koi Varieties Section -->
        <TitledPane text="Popular Koi Varieties" expanded="true">
            <VBox spacing="15">
                <GridPane fx:id="koiGrid" hgap="20" vgap="20"/>
            </VBox>
        </TitledPane>
    </VBox>
</ScrollPane> 