<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.product.server.farmui.MainController" 
      styleClass="main-container">
    
    <!-- Top Navigation Bar -->
    <MenuBar>
        <Menu text="File">
            <MenuItem text="Settings"/>
            <SeparatorMenuItem/>
            <MenuItem text="Exit"/>
        </Menu>
        <Menu text="Help">
            <MenuItem text="About"/>
        </Menu>
    </MenuBar>

    <!-- Main Content -->
    <TabPane fx:id="mainTabPane" VBox.vgrow="ALWAYS" styleClass="main-tab-pane">
        <!-- Home Tab -->
        <Tab text="Home" closable="false">
            <fx:include source="views/home-view.fxml"/>
        </Tab>

        <!-- Tour Search Tab -->
        <Tab text="Tour Search" closable="false">
            <fx:include source="views/tour-search-view.fxml"/>
        </Tab>

        <!-- Service Booking Tab -->
        <Tab text="Book Service" closable="false">
            <fx:include source="views/booking-view.fxml"/>
        </Tab>

        <!-- Order Management Tab -->
        <Tab text="Orders" closable="false">
            <VBox spacing="20" styleClass="content-container">
                <Label text="Order Management" styleClass="header-label"/>
                <!-- Add order management interface here -->
            </VBox>
        </Tab>

        <!-- Customer Management Tab -->
        <Tab text="Customers" closable="false">
            <VBox spacing="20" styleClass="content-container">
                <Label text="Customer Management" styleClass="header-label"/>
                <!-- Add customer management interface here -->
            </VBox>
        </Tab>

        <!-- Dashboard Tab -->
        <Tab text="Dashboard" closable="false">
            <VBox spacing="20" styleClass="content-container">
                <Label text="Business Dashboard" styleClass="header-label"/>
                <!-- Add dashboard components here -->
            </VBox>
        </Tab>
    </TabPane>
</VBox> 