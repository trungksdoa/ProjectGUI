<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.product.server.farmui.MainController" 
      styleClass="main-container">
    
    <!-- Top Navigation Bar -->
    <MenuBar>
        <Menu text="File">
            <MenuItem text="Settings"/>
            <SeparatorMenuItem/>
            <MenuItem text="Exit"/>
        </Menu>
        <Menu text="Help">
            <MenuItem text="About"/>
        </Menu>
    </MenuBar>

    <!-- Main Content -->
    <TabPane fx:id="mainTabPane" VBox.vgrow="ALWAYS" styleClass="main-tab-pane">
        <!-- Home Tab -->
        <Tab text="Home" closable="false">
            <ScrollPane fitToWidth="true" fitToHeight="true">
                <VBox spacing="20" styleClass="content-container">
                    <Label text="Welcome to Koi Fish Trading Service Management" styleClass="header-label"/>
                    
                    <!-- Featured Farms Section -->
                    <TitledPane text="Featured Koi Farms" expanded="true">
                        <VBox spacing="10">
                            <Label text="Discover Our Partner Farms in Japan" styleClass="sub-header"/>
                            <!-- Add farm cards here -->
                        </VBox>
                    </TitledPane>
                    
                    <!-- Popular Koi Varieties -->
                    <TitledPane text="Popular Koi Varieties" expanded="true">
                        <VBox spacing="10">
                            <Label text="Explore Premium Koi Varieties" styleClass="sub-header"/>
                            <!-- Add koi variety cards here -->
                        </VBox>
                    </TitledPane>
                </VBox>
            </ScrollPane>
        </Tab>

        <!-- Tour Search Tab -->
        <Tab text="Tour Search" closable="false">
            <VBox spacing="20" styleClass="content-container">
                <GridPane hgap="10" vgap="10">
                    <Label text="Farm:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <ComboBox GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    
                    <Label text="Koi Variety:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                    <ComboBox GridPane.columnIndex="3" GridPane.rowIndex="0"/>
                    
                    <Label text="Price Range:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <TextField promptText="Min"/>
                        <TextField promptText="Max"/>
                    </HBox>
                    
                    <Label text="Date:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                    <DatePicker GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                    
                    <Button text="Search" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
                </GridPane>
                
                <TableView VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn text="Tour ID"/>
                        <TableColumn text="Farm"/>
                        <TableColumn text="Date"/>
                        <TableColumn text="Price"/>
                        <TableColumn text="Status"/>
                    </columns>
                </TableView>
            </VBox>
        </Tab>

        <!-- Service Booking Tab -->
        <Tab text="Book Service" closable="false">
            <VBox spacing="20" styleClass="content-container">
                <Label text="Book Koi Purchase Service" styleClass="header-label"/>
                <!-- Add booking form here -->
            </VBox>
        </Tab>

        <!-- Order Management Tab -->
        <Tab text="Orders" closable="false">
            <VBox spacing="20" styleClass="content-container">
                <Label text="Order Management" styleClass="header-label"/>
                <!-- Add order management interface here -->
            </VBox>
        </Tab>

        <!-- Customer Management Tab -->
        <Tab text="Customers" closable="false">
            <VBox spacing="20" styleClass="content-container">
                <Label text="Customer Management" styleClass="header-label"/>
                <!-- Add customer management interface here -->
            </VBox>
        </Tab>

        <!-- Dashboard Tab -->
        <Tab text="Dashboard" closable="false">
            <VBox spacing="20" styleClass="content-container">
                <Label text="Business Dashboard" styleClass="header-label"/>
                <!-- Add dashboard components here -->
            </VBox>
        </Tab>
    </TabPane>
</VBox> 